<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:layout_marginBottom="32dp"
        android:text="Select a level:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_level5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_level5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="31dp"
        android:text="Level 5"
        app:layout_constraintBottom_toTopOf="@+id/button_level6"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_level6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="Level 6"
        app:layout_constraintBottom_toTopOf="@+id/button_level7"
        app:layout_constraintStart_toStartOf="@+id/button_level5"
        app:layout_constraintTop_toBottomOf="@+id/button_level5" />

    <Button
        android:id="@+id/button_level7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="Level 7"
        app:layout_constraintBottom_toTopOf="@+id/button_level8"
        app:layout_constraintStart_toStartOf="@+id/button_level6"
        app:layout_constraintTop_toBottomOf="@+id/button_level6" />

    <Button
        android:id="@+id/button_level8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="249dp"
        android:text="Level 8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_level7"
        app:layout_constraintTop_toBottomOf="@+id/button_level7" />
</android.support.constraint.ConstraintLayout>